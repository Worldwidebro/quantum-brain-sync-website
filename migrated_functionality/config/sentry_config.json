{
  "name": "sentry",
  "display_name": "Sentry",
  "description": "SENTRY MCP server for IZA OS ecosystem",
  "deployment": {
    "type": "docker",
    "image": "ghcr.io/klavis-ai/sentry-mcp-server:latest",
    "port": 5311,
    "environment": {
      "SERVER_NAME": "SENTRY",
      "IZA_OS_INTEGRATION": "true",
      "LOG_LEVEL": "info"
    }
  },
  "oauth": {
    "enabled": true,
    "scopes": [
      "read",
      "write"
    ],
    "redirect_uri": "https://iza-os.com/oauth/sentry/callback"
  },
  "capabilities": [
    "error_monitoring",
    "performance_tracking",
    "alerting"
  ],
  "iza_os_integration": {
    "agent_access": [
      "monitoring_agent",
      "critic_agent"
    ],
    "workflow_integration": true,
    "monitoring_enabled": true
  }
}