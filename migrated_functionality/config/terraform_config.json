{
  "name": "terraform",
  "display_name": "Terraform",
  "description": "TERRAFORM MCP server for IZA OS ecosystem",
  "deployment": {
    "type": "docker",
    "image": "ghcr.io/klavis-ai/terraform-mcp-server:latest",
    "port": 5740,
    "environment": {
      "SERVER_NAME": "TERRAFORM",
      "IZA_OS_INTEGRATION": "true",
      "LOG_LEVEL": "info"
    }
  },
  "oauth": {
    "enabled": true,
    "scopes": [
      "read",
      "write"
    ],
    "redirect_uri": "https://iza-os.com/oauth/terraform/callback"
  },
  "capabilities": [
    "basic_operations"
  ],
  "iza_os_integration": {
    "agent_access": [
      "research_agent"
    ],
    "workflow_integration": true,
    "monitoring_enabled": true
  }
}